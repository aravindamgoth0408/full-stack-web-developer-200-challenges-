    <!-- footer navigation -->
    <div class="footer-nav">
      <a href="#" data-month="0">üìò month 1</a>
      <a href="#" data-month="1">‚öõÔ∏è month 2</a>
      <a href="#" data-month="2">üü¢ month 3</a>
      <a href="#" data-month="3">üíæ month 4</a>
      <a href="#" data-month="4">‚òÅÔ∏è month 5</a>
      <a href="#" data-month="5">üîß month 6</a>
      <a href="#">‚¨Ü top</a>
    </div>
