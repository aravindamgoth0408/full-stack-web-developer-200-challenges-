        145:"Learn Heroku database integration",146:"Connect MongoDB Atlas to Heroku",147:"Secure deployment with HTTPS",
        148:"Add monitoring tools",149:"Finalize deployment project",150:"Review Month 5 integration & deployment",
        151:"Learn Git basics",152:"Practice Git branches",153:"Practice Git merges",154:"Learn GitHub pull requests",
        155:"Practice GitHub workflows",156:"Learn TypeScript basics",157:"Practice TypeScript types",158:"Learn TypeScript interfaces",
        159:"Practice TypeScript classes",160:"Convert small JS project to TypeScript",161:"Learn Next.js basics",
        162:"Practice Next.js pages",163:"Practice Next.js routing",164:"Learn Next.js API routes",165:"Build mini Next.js project",
        166:"Learn React Router basics",167:"Practice nested routes",168:"Practice protected routes",169:"Build routing project",
        170:"Review advanced frontend",171:"Learn Docker basics",172:"Practice Docker images",173:"Practice Docker containers",
        174:"Learn Docker Compose",175:"Containerize a Node.js app",176:"Containerize a React app",177:"Connect containers with Docker Compose",
        178:"Debug Docker setup",179:"Review Docker basics",180:"Finalize Docker project",181:"Plan capstone project",
        182:"Set up project repo",183:"Build project frontend",184:"Build project backend",185:"Connect frontend & backend",
        186:"Add database integration",187:"Add authentication system",188:"Add advanced features",189:"Add deployment setup",
        190:"Debug capstone project",191:"Polish frontend",192:"Polish backend",193:"Polish database",194:"Polish authentication",
        195:"Polish deployment",196:"Add documentation",197:"Write README & setup guide",198:"Prepare project presentation",
        199:"Final testing & bug fixes",200:"Showcase capstone project in portfolio"
      };

      const monthNames = [
        "Month 1 ‚Äì HTML/CSS/JS (days 1‚Äì30)",
        "Month 2 ‚Äì Frontend / React (days 31‚Äì60)",
        "Month 3 ‚Äì Backend Node/Express (days 61‚Äì90)",
        "Month 4 ‚Äì Databases (SQL + MongoDB) (days 91‚Äì120)",
        "Month 5 ‚Äì Integration & Deployment (days 121‚Äì150)",
        "Month 6 ‚Äì Advanced + Capstone (days 151‚Äì200)"
      ];

      const monthsContainer = document.getElementById('monthsContainer');

      function renderMonths() {
        let html = '';
        for (let m = 0; m < 6; m++) {
          let start = m * 30 + 1;
          let end = start + 29;
          html += `<div class="month-block" data-month-index="${m}">`;
          html += `<div class="month-header"><h2>${monthNames[m]}</h2><span class="month-tag">days ${start}‚Äì${end}</span></div>`;
          html += `<div class="day-list">`;

          for (let d = start; d <= end; d++) {
            let title = dayTopics[d] || `Day ${d}: project work`;
            // smart badge
            let badge = 'üìå';
            if (d <= 30) badge = 'üß± html/css';
            else if (d <= 60) badge = '‚öõÔ∏è react';
            else if (d <= 90) badge = 'üü¢ node';
            else if (d <= 120) badge = 'üíæ db';
            else if (d <= 150) badge = '‚òÅÔ∏è deploy';
            else badge = 'üîß advanced';

            html += `
              <div class="day-item" data-dayid="${d}">
                <input type="checkbox" id="day${d}">
                <a href="Day ${d}/index.html" target="_blank">Day ${d}: ${title}</a>
                <span class="topic-badge">${badge}</span>
              </div>
            `;
          }
          html += `</div></div>`;
        }
        monthsContainer.innerHTML = html;
      }
      renderMonths();

      // ----- search & progress logic -----
      const searchInput = document.getElementById('searchInput');
      const monthBlocks = document.querySelectorAll('.month-block');
      const progressFill = document.getElementById('progressFill');
      const checkedSpan = document.getElementById('checkedDisplay');
      const resetBtn = document.getElementById('resetProgress');
      const checkboxes = () => document.querySelectorAll('input[type="checkbox"]');

      function filterHandler() {
        const term = searchInput.value.trim().toLowerCase();
        let anyVisible = false;
        monthBlocks.forEach(block => {
          const items = block.querySelectorAll('.day-item');
          let blockHas = false;
          items.forEach(item => {
            const link = item.querySelector('a');
            if (!link) return;
            if (term === '' || link.innerText.toLowerCase().includes(term)) {
              item.style.display = 'flex';
              blockHas = true;
              anyVisible = true;
            } else {
              item.style.display = 'none';
            }
          });
          block.style.display = blockHas ? 'block' : 'none';
        });

        let msg = document.getElementById('noResultMsg');
        if (!anyVisible && term !== '') {
          if (!msg) {
            msg = document.createElement('div');
            msg.id = 'noResultMsg';
            msg.className = 'no-result';
            msg.innerText = '‚ú® no matching topics ¬∑ try another keyword';
            monthsContainer.after(msg);
          }
        } else if (msg) msg.remove();
      }

      function updateProgress() {
        const total = checkboxes().length;
        const checked = document.querySelectorAll('input[type="checkbox"]:checked').length;
        progressFill.style.width = (checked / total) * 100 + '%';
        checkedSpan.innerText = checked + '/' + total;
      }

      function loadSaved() {
        checkboxes().forEach(cb => {
          const saved = localStorage.getItem(cb.id);
          if (saved === 'true') {
            cb.checked = true;
            cb.closest('.day-item')?.classList.add('completed');
          } else {
            cb.checked = false;
            cb.closest('.day-item')?.classList.remove('completed');
          }
        });
        updateProgress();
      }

      function handleCheck(e) {
        const item = e.target.closest('.day-item');
        if (e.target.checked) {
          item?.classList.add('completed');
          localStorage.setItem(e.target.id, 'true');
        } else {
          item?.classList.remove('completed');
          localStorage.setItem(e.target.id, 'false');
        }
        updateProgress();
      }

      function attachListeners() {
        checkboxes().forEach(cb => {
          cb.removeEventListener('change', handleCheck);
          cb.addEventListener('change', handleCheck);
        });
      }

      searchInput.addEventListener('input', filterHandler);

      resetBtn.addEventListener('click', () => {
        if (confirm('Reset all progress?')) {
          checkboxes().forEach(cb => {
            cb.checked = false;
            cb.closest('.day-item')?.classList.remove('completed');
            localStorage.setItem(cb.id, 'false');
          });
          updateProgress();
        }
      });

      // month scroll
      document.querySelectorAll('.footer-nav a[data-month]').forEach(link => {
        link.addEventListener('click', (e) => {
          e.preventDefault();
          const idx = link.getAttribute('data-month');
          if (idx) {
            const target = document.querySelector(`.month-block[data-month-index="${idx}"]`);
            if (target) target.scrollIntoView({ behavior: 'smooth' });
          }
        });
      });

      loadSaved();
      attachListeners();
    })();
  </script>
</body>
</html>
