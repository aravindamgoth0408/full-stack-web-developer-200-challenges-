  <script>
    (function() {
      // ----- 200 day topics (full) -----
      const dayTopics = {
        1:"Learn basic HTML structure",2:"Practice headings, paragraphs, lists",3:"Build a simple HTML page",
        4:"Learn forms & inputs",5:"Semantic HTML tags",6:"CSS selectors",7:"Flexbox basics",8:"CSS Grid basics",
        9:"Responsive design",10:"Mini project ‚Äì static portfolio",11:"JavaScript variables",12:"Functions",
        13:"Conditionals",14:"Loops",15:"Arrays",16:"Objects",17:"DOM basics",18:"Event listeners",
        19:"DOM manipulation",20:"Build interactive form",21:"Practice JS functions",22:"Practice DOM events",
        23:"Practice CSS animations",24:"Combine HTML/CSS/JS",25:"Debugging basics",26:"Mini project ‚Äì interactive quiz",
        27:"Review HTML/CSS",28:"Review JavaScript basics",29:"Practice project polish",30:"Finalize Month 1 portfolio",
        31:"Learn ES6 arrow functions",32:"Practice promises",33:"Async/await exercises",34:"ES6 modules (import/export)",
        35:"Fetch API basics",36:"Fetch API with JSON",37:"Error handling in fetch",38:"Build mini API project",
        39:"Intro to React ‚Äì setup",40:"React components",41:"Props in React",42:"State in React",43:"React events",
        44:"React forms",45:"React hooks (useState)",46:"React hooks (useEffect)",47:"React project setup",
        48:"Build To‚ÄëDo app ‚Äì add tasks",49:"Build To‚ÄëDo app ‚Äì delete tasks",50:"Build To‚ÄëDo app ‚Äì edit tasks",
        51:"Add styling to To‚ÄëDo app",52:"Add local storage to To‚ÄëDo app",53:"Add filtering to To‚ÄëDo app",
        54:"Debug React app",55:"Review React basics",56:"Practice React hooks",57:"Practice API integration in React",
        58:"Polish To‚ÄëDo app project",59:"Add extra features (dark mode)",60:"Finalize Month 2 React project",
        61:"Learn Node.js basics ‚Äì setup & modules",62:"Understand npm & package.json",63:"Learn Node.js event loop",
        64:"Practice Node.js file system module",65:"Build a simple Node.js script",66:"Intro to Express.js ‚Äì setup",
        67:"Express routing basics",68:"Express middleware",69:"REST API basics with Express",70:"Build a simple REST API",
        71:"Handle GET requests",72:"Handle POST requests",73:"Handle PUT requests",74:"Handle DELETE requests",
        75:"Practice REST API with JSON data",76:"Connect React frontend to Express API",77:"Fetch data from backend in React",
        78:"Handle API errors in React",79:"Build full CRUD with React + Express",80:"Debug backend API",
        81:"Add validation to API",82:"Add logging middleware",83:"Add error handling middleware",84:"Secure API basics",
        85:"Practice REST API best practices",86:"Mini project ‚Äì Notes API",87:"Connect Notes API to React frontend",
        88:"Add extra features to Notes app",89:"Review Node.js & Express",90:"Finalize backend project",
        91:"Learn SQL basics ‚Äì tables",92:"SQL queries ‚Äì SELECT",93:"SQL queries ‚Äì INSERT",94:"SQL queries ‚Äì UPDATE",
        95:"SQL queries ‚Äì DELETE",96:"SQL joins",97:"SQL constraints",98:"SQL practice project",
        99:"Intro to MongoDB ‚Äì setup",100:"MongoDB collections & documents",101:"MongoDB CRUD ‚Äì insert",
        102:"MongoDB CRUD ‚Äì find",103:"MongoDB CRUD ‚Äì update",104:"MongoDB CRUD ‚Äì delete",105:"MongoDB queries",
        106:"MongoDB indexes",107:"Connect MongoDB to Express",108:"Build user signup API",109:"Build user login API",
        110:"Add password hashing",111:"Add JWT authentication",112:"Add session management",113:"Secure MongoDB queries",
        114:"Debug database integration",115:"Practice SQL + MongoDB",116:"Mini project ‚Äì Auth system",
        117:"Connect Auth system to React frontend",118:"Add extra features (profile page)",119:"Review databases",
        120:"Finalize database project",121:"Learn JWT basics",122:"Implement JWT authentication",123:"Learn session management",
        124:"Add sessions to backend",125:"Secure API endpoints",126:"Learn RESTful API design principles",
        127:"Add error handling to API",128:"Add input validation",129:"Learn API versioning",130:"Practice RESTful API best practices",
        131:"Intro to deployment ‚Äì Heroku",132:"Deploy backend to Heroku",133:"Deploy frontend to Netlify",
        134:"Deploy full stack app",135:"Learn environment variables",136:"Add environment variables to project",
        137:"Learn CI/CD basics",138:"Practice CI/CD pipeline setup",139:"Debug deployment issues",140:"Review deployment methods",
